<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false">

    <ImageView
        android:id="@+id/profile_pic"
        android:contentDescription="User's Profile Outline"
        android:layout_width="183dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="120dp"
        android:visibility="visible"
        app:srcCompat="@drawable/profile_outline" />

    <ImageView
        android:id="@+id/ivLogo2"
        android:contentDescription="Got2Go logo"
        android:layout_width="226dp"
        android:layout_height="359dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/g2gw" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="157dp"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="35sp" />

    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_below="@id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="204dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_below="@id/account"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="438dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_below="@id/myReviews"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="618dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="402dp"
        android:text="Account Info"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/myReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="579dp"
        android:text="My Reviews"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>
